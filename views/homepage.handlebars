{{!-- Loop over each post --}}
{{#each posts as |post|}}
    <div class="post">
        <h2>{{post.title}}</h2>
        <div class="post-details">
            <p>By {{post.user.username}} | Created on {{post.date}}</p>
        </div>
        <div class="post-content">
            <p>{{post.body}}</p>
        </div>
        <div class="post-actions">
            <form class="comment-form" action="/comment" method="POST">
                <input type="text" name="comment" placeholder="Add a comment">
                <input type="hidden" name="post_id" value="{{post.id}}">
                <button type="submit">Comment</button>
            </form>
            <form class="edit-form" action="/edit" method="POST">
                <input type="text" name="title" value="{{post.title}}" placeholder="New title">
                <input type="text" name="body" value="{{post.body}}" placeholder="New body">
                <input type="hidden" name="post_id" value="{{post.id}}">
                <button type="submit">Edit</button>
            </form>
            <form class="delete-form" action="/delete" method="POST">
                <input type="hidden" name="post_id" value="{{post.id}}">
                <button type="submit">Delete</button>
            </form>
        </div>
        <hr>
    </div>
{{/each}}